{
  "openapi": "3.0.3",
  "info": { "title": "Admin API", "version": "1.0.0" },
  "servers": [{ "url": "https://admin.example.com" }],
  "paths": {
    "/admin/users": {
      "get": {
        "operationId": "adminListUsers",
        "tags": ["admin"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/User" } }
              }
            }
          }
        }
      }
    },
    "/admin/audit-log": {
      "get": {
        "operationId": "getAuditLog",
        "tags": ["admin", "internal"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuditLogResponse" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": ["id", "email", "role"],
        "properties": {
          "id": { "type": "string", "example": "u_admin_1" },
          "email": { "type": "string", "format": "email", "example": "admin@example.com" },
          "role": { "type": "string", "enum": ["admin", "support", "auditor"] }
        }
      },
      "AuditLogResponse": {
        "type": "object",
        "required": ["items"],
        "properties": {
          "items": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/AuditLogItem" }
          }
        }
      },
      "AuditLogItem": {
        "type": "object",
        "required": ["id", "actor", "action", "ts"],
        "properties": {
          "id": { "type": "string", "example": "evt_001" },
          "actor": { "$ref": "#/components/schemas/User" },
          "action": { "type": "string", "example": "USER_CREATED" },
          "ts": { "type": "string", "format": "date-time", "example": "2025-01-01T12:00:00Z" }
        }
      }
    }
  }
}
